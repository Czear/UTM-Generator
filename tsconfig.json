{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react",
    "baseUrl": "./src",
    "paths": {
      "App/*": ["./*"],
      "Asset/*": ["./Asset/*"],
      "Component/*": ["./Component/*"],
      "Container/*": ["./Container/*"],
      "Service/*": ["./Service/*"],
      "Tool/*": ["./Tool/*"],
      "Translation/*": ["./Translation/*"],
      "Theme": ["./Theme"]
    }
  },
  "include": [
    "src"
  ]
}
